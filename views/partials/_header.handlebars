<header class='bg-blue-700 text-gray-200 p-3 md:max-h-28'>
  <nav class='flex flex-col p-2 md:flex-row'>
    <div class='flex-1 p-1'><a href='https://ajaxpickering.ca/' alt='AjaxPickering.ca home page'>
        <img src='ajaxpickering-logo.png' alt='AjaxPickering.ca logo' class='h-16'></a>
    </div>
    <div class='flex-1 px-2 pt-3'>
      <button class='font-bold hover:text-green-400' type='button' onclick='selectNav("businessNav")'>
        <i class='fas fa-briefcase p-2'></i>Find a Business</button>
    </div>
    <div class='flex-1 px-2 pt-3'>
      <button class='font-bold hover:text-green-400' type='button' onclick='selectNav("restaurantNav")'>
        <i class="fas fa-utensils p-2"></i>Find a Restaurant</button>
    </div>
    <div class='flex-1 px-2 pt-3'>
      <button class='font-bold hover:text-green-400' type='button' onclick='selectNav("eventsNav")'>
        <i class="fas fa-calendar-alt p-2"></i>Local Events</button>
    </div>
    <div class='flex-1 px-2 pt-3'>
      <button class='font-bold hover:text-green-400' type='button' onclick='selectNav("linksNav")'>
        <i class="fas fa-link p-2"></i>Quick Links</button>
      <ul class='invisible bg-blue-700 p-2 md:bg-gray-600 md:rounded-sm' id='linksNav'>
        <li>
          <button class='text-sm hover:text-green-400' type='button'>
            <i class='fas fa-vote-yea p-1'></i>2019 Federal Elections
          </button>
        </li>
        <li>
          <button class='text-sm hover:text-green-400' type='button'>
            <i class='fas fa-vote-yea p-1'></i>2018 Federal Elections
          </button>
        </li>
        <li>
          <button class='text-sm hover:text-green-400' type='button'>
            <i class='fas fa-camera p-1'></i>Traffic Cameras
          </button>
        </li>
        <li>
          <button class='text-sm hover:text-green-400' type='button'>
            <i class='fas fa-gas-pump p-1'></i>Local Gas Prices
          </button>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  function selectNav(target) {
   var linksNav = document.getElementById('linksNav');
    var navs = [linksNav];
    navs.forEach(element => {
      if (element.id == target) {
        element.classList.remove('invisible');
      }
      else {
        element.classList.add('invisible');
      }
    });
  }
</script>